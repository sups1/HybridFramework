<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="4"
       thread-count="3" parallel="tests">


    <listeners>
          <listener class-name="listeners.TestAllureListener" />
          <listener class-name="listeners.AnnotationTransformer" />
    </listeners>

    <test name="Scenario smoke">
        <parameter name="browser" value="firefox" />

        <classes>
            <class name="parallel.TestRunner" />
        </classes>
    </test>
    <test name="Scenario sanity">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="parallel.TestRunner" />
        </classes>
    </test>
    <test name="Scenario regr">
         <parameter name="browser" value="chrome" />

         <classes>
             <class name="parallel.TestRunner" />
         </classes>
     </test>



